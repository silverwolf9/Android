<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
    	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
       	android:padding="24dp"
       	android:text="@string/i_want_to" />
   
    <Button
        android:id="@+id/order_food_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
   	    android:text="@string/order_food" />
    <Button
        android:id="@+id/book_restaurant_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
   	    android:text="@string/book_restaurant" />
    <Button
        android:id="@+id/haircut_button"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
   	    android:text="@string/haircut" />
    
    
</LinearLayout>
